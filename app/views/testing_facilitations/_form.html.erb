<%= form_for(testing_facilitation) do |f| %>
	<% if testing_facilitation.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(testing_facilitation.errors.count, "error") %> prohibited this testing_facilitation from being saved:</h2>

			<ul>
			<% testing_facilitation.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :data_entry_name %>
		<%= f.text_field :data_entry_name %>
	</div>

	<div class="field">
		<%= f.label :date_of_visit %>
		<%= f.text_field :date_of_visit %>
	</div>

	<div class="field">
		<%= f.label :participant_id %>
		<%= f.text_field :participant_id %>
	</div>

	<div class="field">
		<%= f.label :staff_person %>
		<%= f.text_field :staff_person %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :agree_to_use_home_test_kit_at_site, {
"Yes (1)": 1,
"No (0)": 0 }) %>
	</div>

	<div class="field">
		<%= f.label :agree_to_use_home_test_kit_at_site_refusal_reason %>
		<%= f.text_field :agree_to_use_home_test_kit_at_site_refusal_reason %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :agree_to_take_test_kit_home, {
"Yes (1)": 1,
"No (0)": 0,
"N/A (2)": 2 }) %>
	</div>

	<div class="field">
		<%= f.label :agree_to_take_test_kit_home_refusal_reason %>
		<%= f.text_field :agree_to_take_test_kit_home_refusal_reason %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :agree_to_tell_result_of_home_test_kit, {
"Yes (1)": 1,
"No (0)": 0 }) %>
	</div>

	<div class="field">
		<%= f.label :agree_to_tell_result_of_home_test_kit_refusal_reason %>
		<%= f.text_field :agree_to_tell_result_of_home_test_kit_refusal_reason %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :result_of_home_test_kit, {
"Preliminary positive (1)": 1,
"Negative (0)": 0,
"Indeterminate (20)": 20 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :confirmatory_test_referred_location, {
"HOPES ... (1)": 1,
"Primary care provider (2)": 2,
"WCHD (3)": 3,
"Planned Parenthood (4)": 4,
"Other ... (20)": 20 }) %>
	</div>

	<div class="field">
		<%= f.label :confirmatory_test_referred_appointment %>
		<%= f.text_field :confirmatory_test_referred_appointment %>
	</div>

	<div class="field">
		<%= f.label :confirmatory_test_referred_location_other %>
		<%= f.text_field :confirmatory_test_referred_location_other %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :indeterminate_test_option, {
"Took another test (1)": 1,
"Referred to: ... (2)": 2 }) %>
	</div>

	<div class="field">
		<%= f.label :indeterminate_test_result %>
		<%= f.text_field :indeterminate_test_result %>
	</div>

	<div class="field">
		<%= f.label :indeterminate_test_referred_to %>
		<%= f.text_field :indeterminate_test_referred_to %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :urine_to_test, {
"Yes (1)": 1,
"No (0)": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :urine_to_test_refusal_reason, {
"Experiencing symptons and referred to primary care or WCHD (1)": 1,
"Unable to produce a sample (2)": 2,
"Refused (3)": 3,
"Other ... (20)": 20 }) %>
	</div>

	<div class="field">
		<%= f.label :urine_to_test_refusal_reason_other %>
		<%= f.text_field :urine_to_test_refusal_reason_other %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :gonorrhea_result, {
"Reactive (1)": 1,
"Non-Reactive (0)": 0,
"Indeterminate (20)": 20,
"Not tested (21)": 21 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :chlamydia_result, {
"Reactive (1)": 1,
"Non-Reactive (0)": 0,
"Indeterminate (20)": 20,
"Not tested (21)": 21 }) %>
	</div>

	<div class="field">
		<%= f.label :notes %>
		<%= f.text_area :notes %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
