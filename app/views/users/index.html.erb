<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
	<thead>
		<tr>
			<th>Email</th>
			<th>Password</th>
			<th>Name</th>
			<th>Lastactivity</th>
			<th>Permissions</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= MCRYPT.ivdecrypt(user.email) %></td>
				<td><%= user.password %></td>
				<td><%= MCRYPT.ivdecrypt(user.name) %></td>
				<td><%= user.lastActivity %></td>
				<td><%= user.permissions %></td>
				<td><%= link_to 'Show', user %></td>
			</tr>
		<% end %>
	</tbody>
</table>
