<%= form_for @rails_user_session, :url => rails_user_session_path do |f| %>
	<% if @rails_user_session.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@rails_user_session.errors.count, "error") %> prohibited:</h2>
		<ul>
			<% @rails_user_session.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%= f.label :login %><br />
	<%= f.text_field :login %><br />
	<br />
	<%= f.label :password %><br />
	<%= f.password_field :password %><br />
	<br />
	<%= f.submit "Login" %>
<% end %>
