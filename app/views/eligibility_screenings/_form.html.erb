<%= form_for(eligibility_screening) do |f| %>
	<% if eligibility_screening.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(eligibility_screening.errors.count, "error") %> prohibited this eligibility_screening from being saved:</h2>

			<ul>
			<% eligibility_screening.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :data_entry_name %>
		<%= f.text_field :data_entry_name %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :how_learned, {
			"Outreach": 1,
			"Flyer": 2,
			"Church/Organization": 3,
			"Other": 20
		}) %>
		<%= f.label :how_learned_other %>
		<%= f.text_field :how_learned_other %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :age, {
			"18-44": 1,
			"Other": 0
		}) %>
		<%= f.label :age_other %>
		<%= f.text_field :age_other %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :gender, {
			"F/TF": 1,
			"M/TM": 0
		}) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :gender_at_birth, {
			"F": 1,
			"M": 0
		}) %>
	</div>

	<br/><a>If not black/African/African American or Latina, then ineligible</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :race, {
			"B/A/AA/L": 1,
			"Other": 0
		}) %>
		<%= f.label :race_other %>
		<%= f.text_field :race_other %>
	</div>

	<br/><a>Does not affect eligibility</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :children, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<br/><a>Does not affect eligibility</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :seen_pcp, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<br/><a>Does not affect eligibility</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :marital, [ "Married", "Single", "Divorced", "Separated" ]) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :tested_hiv, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :tested_hiv_result, {
"Neg/Unknown": 1,
"Positive": 0 }) %>
	</div>

	<br/><a>2 or more, then eligible</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_count, {
"2 or more": 1,
"0-1": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :injection_drugs, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_injection_drugs, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_noninjection_drugs, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<br/><a>If yes or don’t know, then eligible</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_hiv_positive, {
"Yes / Don't Know": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_other_partners, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_traded_sex, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :partner_man_men, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :eligible_q_9_16, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<br/><a>Must live in Reno, Sparks, Carson, North Valleys area</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :where_live, {
"R/S/C/SV": 1,
"Other": 0 }) %>
		<%= f.label :where_live_other %>
		<%= f.text_field :where_live_other %>
	</div>

	<br/><a>Must be willing</a><br/>
	<div class="field">
		<%= f.radio_button_group_with_labels( :willing_to_refer, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :matched_to_ego, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :eligible, {
"Yes": 1,
"No": 0 }) %>
	</div>

	<p>To be completed after the screening interview:</p>

	<div class="field">
		<%= f.label :name_of_screener %>
		<%= f.text_field :name_of_screener %>
	</div>

	<div class="field">
		<%= f.label :location_of_screening %>
		<%= f.text_field :location_of_screening %>
	</div>

	<div class="field">
		<%= f.label :date_of_screening %>
		<%= f.text_field :date_of_screening %>
	</div>

	<div class="field">
		<%= f.label :time_of_screening %>
		<%= f.text_field :time_of_screening %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :referred_for_interview, {
"Yes": 1,
"No": 0 }) %>
		<%= f.label :referred_appointment_date %>
		<%= f.text_field :referred_appointment_date %>
		<%= f.label :referred_appointment_time %>
		<%= f.text_field :referred_appointment_time %>
	</div>

	<div class="field">
		<%= f.radio_button_group_with_labels( :reason_for_refusal, {
"Too busy/not enough time": 1,
"Don’t want to travel to the site": 2,
"Don’t want to talk about the study topics": 3,
"Not interested for some other reason": 20 }) %>
		<%= f.text_field :reason_for_refusal_other %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
