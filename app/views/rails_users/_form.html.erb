<%= form_for(rails_user) do |f| %>
	<% if rails_user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(rails_user.errors.count, "error") %> prohibited this rails_user from being saved:</h2>

			<ul>
			<% rails_user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :login %>
		<%= f.text_field :login %>
	</div>

	<div class="field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div class="field">
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>

<p><%#=required('*')-%>&nbsp;-&nbsp;Password requires at least one lowercase and one uppercase letter, one number and one special character </p>
<% end %>
