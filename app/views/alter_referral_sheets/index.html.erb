<p id="notice"><%= notice %></p>

<h1>Alter Referral Sheets
<% if current_user.present? and current_user.can_create? %>
[ <%= link_to 'New Alter Referral Sheet', new_alter_referral_sheet_path %> ]
<% end %>
</h1>
<br/>

<table class='tablesorter'>
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Data Entry Name</th>
			<th><%= t 'activerecord.attributes.alter_referral_sheet.ego_id' %></th>
<% if current_user.present? and current_user.can_read? %>
			<th>Referrals</th>
<% end %>
		</tr>
	</thead>

	<tbody>
		<% @alter_referral_sheets.each do |alter_referral_sheet| %>
			<tr>
				<td>
				<% if current_user.present? and current_user.can_read? %>
					<%= link_to 'Show', alter_referral_sheet %>
				<% end %>
				<% if current_user.present? and current_user.can_update? %>
					<%= link_to 'Edit', edit_alter_referral_sheet_path(alter_referral_sheet) %>
				<% end %>
				<% if current_user.present? and current_user.can_destroy? %>
					<%= link_to 'Destroy', alter_referral_sheet, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
				</td>
				<td><%= alter_referral_sheet.data_entry_name %></td>
				<td><%= alter_referral_sheet.ego_id %></td>
<% if current_user.present? and current_user.can_read? %>
				<td><%= alter_referral_sheet.alter_referrals_count %></td>
<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
