<h1>Alter Referral Sheets</h1>

<table>
	<thead>
		<tr>
			<th><%= t 'activerecord.attributes.alter_referral_sheet.ego_id' %></th>
			<th>Refferals</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @alter_referral_sheets.each do |alter_referral_sheet| %>
